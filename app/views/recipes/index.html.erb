<p id="notice"><%= notice %></p>
<div class="Recipes-List">
	<table>
		<% @recipes.each do |recipe| %>
			<tr>
				<td class="Recipe-Title"><%= link_to recipe.title, recipe_path(recipe) %></td>
				<td class="Recipe-Button"><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
				<td class="Recipe-Button"><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</table>
</div>

<br>

<%= button_to "Add recipe", new_recipe_path, method: :get %>
